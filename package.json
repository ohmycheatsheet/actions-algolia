{
  "name": "javascript-action",
  "version": "1.0.0",
  "description": "TypeScript Action Template",
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "license": "MIT",
  "homepage": "https://github.com/actions/javascript-action#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/javascript-action.git"
  },
  "bugs": {
    "url": "https://github.com/actions/javascript-action/issues"
  },
  "author": "",
  "main": "index.js",
  "scripts": {
    "lint:fix": "eslint . --fix",
    "prepare": "ncc build ./src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/**/*.{js,ts,vue,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.2.5"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.2.2",
    "@jest/types": "^27.1.1",
    "@types/jest": "^27.0.1",
    "@vercel/ncc": "^0.27.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.4.0",
    "husky": "3.x",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
